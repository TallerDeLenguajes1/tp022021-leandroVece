@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<form asp-action="DataEmpleado" asp-controller="Home" method="post">
    <div class="form-group row">
        <div class="col">
            <label for="">Nombre/s</label>
            <input type="text" class="form-control" name="name" placeholder="Nombre">
        </div>
        <div class="col">
            <label for="">Apellido/s</label>
            <input type="text" class="form-control" name="surname" placeholder="Apellido">
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label for="">Direccion</label>
            <input type="text" class="form-control" name="direc" placeholder="Direccion">
        </div>
        <div class="col">
            <label for="">Documento</label>
            <input type="text" class="form-control" name="DNI" placeholder="Documento">
        </div>
        <div class=" col">
            <label for="">Edad Actual</label>
            <input type="text" class="form-control" name="edad" placeholder="Edad">
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label for="">Fecha De Nacimiento</label>
            <input type="date" class="form-control" name="Fnacimiento" placeholder="Fecha Nacimiento">
        </div>
        <div class="col">
            <label for="">Fecha De Ingreso</label>
            <input type="date" class="form-control" name="FIngreso" placeholder="Fecha Ingreso">
        </div>
    </div>
    <input type="submit" name="name" value="Enviar" class="btn btn-primary" />
</form>